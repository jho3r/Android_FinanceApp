<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinanceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Main.Card" parent="Theme.FinanceApp">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/card_background</item>
    </style>

    <style name="Main.CardContent" parent="Theme.FinanceApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SourceRow.Card" parent="Theme.FinanceApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginb_sourcerow_card</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

</resources>