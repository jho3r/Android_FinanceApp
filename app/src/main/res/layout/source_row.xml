<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSourceRowCard"
        style="@style/SourceRow.Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_sourcerow_card">

            <TextView
                android:id="@+id/tvSourceRowName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tsize_sourcerow_name"
                android:textStyle="bold"
                tools:text="Nequi:" />

            <TextView
                android:id="@+id/tvSourceRowValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dpadding_sourcerow_money"
                android:gravity="center"
                android:textSize="@dimen/tsize_sourcerow_value"
                app:drawableStartCompat="@drawable/icon_money"
                tools:text="3'600.000" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>